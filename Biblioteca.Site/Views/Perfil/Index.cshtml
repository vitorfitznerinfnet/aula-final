@model Biblioteca.Site.Models.Perfil.PerfilIndexModel

<h1>Perfil</h1>

<form action="/perfil/criar" method="post">
    <div class="form-group">
        <label>Nome</label>
        <input name="nome" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Nome" value="@Model.Nome">
    </div>
    <div class="form-group">
        <label>Endereço</label>
        <input type="text" name="endereco" class="form-control" aria-describedby="emailHelp" placeholder="Endereco"  value="@Model.Endereco">
    </div>
    <div class="form-group">
        <label>Telefone</label>
        <input type="text" name="telefone" class="form-control" aria-describedby="emailHelp" placeholder="Telefone"  value="@Model.Telefone">
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>